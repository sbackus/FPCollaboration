<%= form_for([@scrapbook, @page]), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :scrapbook_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :scrapbook_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scrapbook_pages_path(@scrapbook), :class => 'btn' %>
  </div>
<% end %>
