<%= form_for [@scrapbook], :html => { :class => 'form-horizontal' } do |f| %>

    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div> 

  <div >
    <%= f.submit nil, :class => 'datepicker btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                scrapbooks_path, :class => 'btn' %>
  </div>

<% end %>